<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
	
<% @trainer.pokemon.each do |p| %>
	Name: <p> <%= p.name %> </p>
	Level: <p> <%= p.level %> </p>
	<%= button_to "Damage!", damage_path(id: p), :class => "button medium", :method => :patch %>
<% end %>

<%= button_to "Create new Pokemon!", create_path(id: p), :class => "button medium", :method => :create %>

